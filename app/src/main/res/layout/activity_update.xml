<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/dark_cyan_green">

    <View
        android:id="@+id/conteirerTop"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="0dp"
        android:background="@drawable/backgroud_view_top" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="90dp"
        android:layout_height="111dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="31dp"
        android:layout_marginEnd="116dp"
        android:text="Vamos atualizar seu cadastro"
        android:textColor="#040303"
        android:textSize="21sp"
        android:textStyle="bold" />

    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_alignStart="@+id/conteirerTop"
        android:layout_alignTop="@+id/conteirerTop"
        android:layout_alignEnd="@+id/conteirerTop"
        android:layout_alignBottom="@+id/conteirerTop"
        android:layout_marginTop="11dp"
        android:layout_marginEnd="229dp"
        android:layout_marginBottom="39dp"
        android:contentDescription="@string/Logo"
        android:src="@drawable/emotiondecoder" />

    <EditText
        android:id="@+id/edit_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/conteirerTop"
        android:layout_marginStart="20dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="20dp"
        android:autofillHints="emailAddress"
        android:background="@drawable/background_edittext"
        android:backgroundTint="#FFFFFF"
        android:drawableEnd="@drawable/ic_email"
        android:hint="@string/e_mail"
        android:inputType="textEmailAddress"
        android:maxLines="1"
        android:padding="15dp"
        android:textColor="@color/black"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/edit_senha"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/edit_email"
        android:layout_marginStart="20dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="20dp"
        android:autofillHints="password"
        app:passwordToggleDrawable="@drawable/baseline_remove_red_eye_24"
        app:passwordToggleEnabled="true"
        app:passwordToggleTint="@color/black"
        android:background="@drawable/background_edittext"
        android:backgroundTint="#FFFFFF"
        android:hint="@string/digite_sua_senha"
        android:inputType="textPassword"
        android:padding="15dp"
        android:textColor="@color/black" />

    <EditText
        android:id="@+id/edit_confirm_senha"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/edit_senha"
        android:layout_marginStart="20dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="20dp"
        android:autofillHints="password"
        app:passwordToggleDrawable="@drawable/baseline_remove_red_eye_24"
        app:passwordToggleEnabled="true"
        app:passwordToggleTint="@color/black"
        android:background="@drawable/background_edittext"
        android:backgroundTint="#FFFFFF"
        android:hint="Confirme a senha"
        android:inputType="textPassword"
        android:padding="15dp"
        android:textColor="@color/black" />



    <Button
        android:id="@+id/button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/edit_confirm_senha"
        android:layout_marginTop="32dp"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/button_comecar"
        android:text="Salvar" />

    <Button
        android:id="@+id/button2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/button"
        android:layout_marginTop="20dp"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/button_comecar"
        android:text="Deletar Conta" />

    <Button
        android:id="@+id/button3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button2"
        android:layout_alignParentEnd="true"
        android:background="@drawable/button_comecar"
        android:layout_marginTop="20dp"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp"
        android:text="Voltar" />
</RelativeLayout>
